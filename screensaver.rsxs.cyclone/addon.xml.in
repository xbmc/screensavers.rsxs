<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.rsxs.cyclone"
  version="3.0.0"
  name="Cyclone"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Tornado screen saver</summary>
    <description lang="en_GB">This screensaver makes tornadoes on your screen.
Was wrote for storm chasing buddy, but you can have it too. Have a look at his weather page if you're interested in meteorology and severe weather.</description>
    <disclaimer lang="en_GB">This is an implementation based on "rss-glx" screensaver</disclaimer>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
      <screenshot>resources/screenshot-01.jpg</screenshot>
      <screenshot>resources/screenshot-02.jpg</screenshot>
      <screenshot>resources/screenshot-03.jpg</screenshot>
    </assets>
  </extension>
</addon>

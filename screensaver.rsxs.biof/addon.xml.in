<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="screensaver.rsxs.biof"
  version="3.0.0"
  name="Biof"
  provider-name="Team Kodi">
  <requires>@ADDON_DEPENDS@</requires>
  <extension
    point="xbmc.ui.screensaver"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Rotating stack of quads</summary>
    <description lang="en_GB">To rotating stack with various types of quads.</description>
    <disclaimer lang="en_GB">This is an implementation based on "rss-glx" screensaver</disclaimer>
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.png</fanart>
      <screenshot>resources/screenshot-01.png</screenshot>
      <screenshot>resources/screenshot-02.png</screenshot>
      <screenshot>resources/screenshot-03.png</screenshot>
      <screenshot>resources/screenshot-04.png</screenshot>
    </assets>
  </extension>
</addon>
